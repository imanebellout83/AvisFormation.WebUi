
@{
    ViewBag.Title = "Contact";
}

<div class="p-0 mb-4 bg-dark my-4 rounded-2">
    <div class="container-fluid py-3 " style="color:#ffa500;" id="Title">
        <h1 class="display-5 fw-bold ">Courses reviews</h1>
        <p class="fs-4">Contactez nous</p>


    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-4 border-end">
            <div>
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label class="form-label">Nom :</label>
                        <input type="text" name="nom" id="nom" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email :</label>
                        <input type="email" name="email" id="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message :</label>
                        <input type="text" name="message" id="message" class="form-control" />
                    </div>
                    <div>
                        <input type="submit" name="envoyer" id="envoyer" value="Envoyer" class="btn btn-outline-warning" />
                    </div>
                }
            </div>
        </div>
      
        
        <div class="col-8">
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3311.5691137891176!2d-5.549571450423666!3d33.900749433053115!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xda0451555555555%3A0xa6aee9b98479b777!2sECOLE%20PROFESSIONNELLE%20D&#39;INFORMATIQUE%20ET%20DE%20MANAGEMENT%20-%20EPIM!5e0!3m2!1sfr!2sma!4v1671614907066!5m2!1sfr!2sma" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>

</div>


